<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="hrv.band.app">

  <uses-permission android:name="android.permission.BLUETOOTH" />
  <uses-permission android:name="com.microsoft.band.service.access.BIND_BAND_SERVICE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.SplashActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.IntroActivity"
      android:label="Intro" />
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.MainActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar" />
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.SavableMeasurementActivity"
      android:label="@string/title_activity_save_values"
        android:parentActivityName=".ui.view.ui.view.activity.MainActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
          android:value=".ui.view.ui.view.activity.MainActivity" />
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.HistoryActivity"
      android:label="@string/title_activity_statistic"
        android:parentActivityName=".ui.view.ui.view.activity.MainActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
          android:value=".ui.view.ui.view.activity.MainActivity" />
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.EditableMeasurementActivity"
      android:label="@string/title_activity_hrv_value"
        android:parentActivityName=".ui.view.ui.view.activity.HistoryActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
          android:value=".ui.view.ui.view.activity.HistoryActivity" />
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.ImprintActivity"
      android:label="@string/common_imprint"
        android:parentActivityName=".ui.view.ui.view.activity.MainActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
          android:value=".ui.view.ui.view.activity.MainActivity" />
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.SettingsActivity"
      android:label="@string/main_drawer_settings"
        android:parentActivityName=".ui.view.ui.view.activity.MainActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
          android:value=".ui.view.ui.view.activity.MainActivity" />
    </ui.view.activity>
    <ui.view.activity
        android:name=".ui.view.ui.view.activity.WebActivity"
      android:label="@string/title_activity_web_view"
      android:theme="@style/AppTheme"/>
  </application>

</manifest>